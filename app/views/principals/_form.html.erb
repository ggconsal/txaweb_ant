<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@principal, remote: true) do |f| %>

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h3>¿Quieres mejorar tu Negocio?</h3>
      </div>

      <div class="modal-body">

        <h4 class="modal-header-h4">¡Anótate Gratis y te enviaremos<br/>Información útil para tu Pyme!</h4>
        <ul class="errors"></ul>

        <div class="row">
          <div class="field col-xs-12 col-sm-12 col-md-12">
            <%= f.text_field :con_nombre, :required => true, :placeholder => "Ingrese su Nombre...", :class=>"form-control" %>
          </div>
<!--
          <div class="field col-sm-6 col-md-6">
            <%= f.text_field :con_telefono, :required => true, :placeholder => "Ingrese su Teléfono...", :class=>"form-control" %>
          </div>
-->
        </div>
        <div class="field">
          <%= f.text_field :con_mail, :required => true, :placeholder => "Ingrese su email...", :class=>"form-control" %>
        </div>

      </div>

      <div class="modal-footer">
        <div class="col-xs-6 col-sm-7 col-md-7 col-lg-7">
          <%= image_tag("texhablanco100x40.jpg") %>
        </div>
        <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">
          <%= f.submit '¡Me Anoto!', :class=>"btn btn-outline-inverse btn-md btn-idx3", :id=>"gc-aceptar" %>
        </div>
<!-- 
        <%= link_to "Cancelar", "#", class: "btn btn-outline-inverse btn-md btn-idx3", data: {dismiss: "modal"} %>
-->
      </div>

    <% end %>
  </div>
</div>
