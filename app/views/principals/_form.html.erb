<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@principal, remote: true) do |f| %>

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h3>Por favor...<br/>Déjanos tu Teléfono o Mail</h3>
      </div>

      <div class="modal-body">

        <ul class="errors"></ul>

        <div class="field">
          <%= f.label "Nombre:", class: "control-label" %>
          <%= f.text_field :con_nombre, class: "form-control" %>
        </div><br/>

        <div class="field">
          <%= f.label "Mail o Teléfono", class: "control-label" %>
          <%= f.text_area :mov_obs, class: "form-control" %>
        </div>
      </div>

      <div class="modal-footer">
        <%= f.submit 'Enviar', :class=>"btn btn-outline-inverse btn-md btn-idx3", :id=>"gc-aceptar" %>
        <%= link_to "Cancelar", "#", class: "btn btn-outline-inverse btn-md btn-idx3", data: {dismiss: "modal"} %>
      </div>

    <% end %>
  </div>
</div>
