body, html, .div-ppal {
	height: 100%;
}

/*
--------------------------------------------------------------------
---- MENU PRINCIPAL
--------------------------------------------------------------------
*/

.navbar {
	background-color: #fff;
	opacity: .8;
	top: 3%;
	margin-left: 20%;
	border-radius: 15%;
	border-color: #bbb;
	border-bottom-width: 3px;
	border-right-width: 3px;
}

.navbar-brand {
	padding: 0px;
	padding-top: 5%;
}

.navbar-nav li a {
	padding-right: 5px;
	padding-left: 10px;
}

.marca {
	position: absolute;
	top: 0%;
	left: 2%;
}

.navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > li > a:focus {
    color: #fff;
    background-color: #777;
	border-radius: 65%;
	font-weight: bold;
}

/*
--------------------------------------------------------------------
---- HOME IMAGEN DE FONDO
--------------------------------------------------------------------
*/

.div-img {
	height: 100%;
    padding-right: 0px;
    padding-left: 0px;
}

.img-ppal {
	margin: 0px;
	width: 100%;
	left: 0px;
	height: 100%;
}

/*
--------------------------------------------------------------------
---- HOME CAROUSEL
--------------------------------------------------------------------
*/

.carousel, .carousel-inner, .item  {
	height: 100%;
}

.carousel-ppal {
	position: absolute;
	bottom: 35%;
	height: 50%;
	overflow: hidden;
}

/*
--------------------------------------------------------------------
---- HOME CAROUSEL CAPTION
--------------------------------------------------------------------
*/

.carousel-caption {
	position: static;
	background-color: transparent;
	color: #07145C;
	border-radius: 20%;
}

.carousel-caption h3 {
    font-size: 2.5em;
	color: #0A79B6;
}

.carousel-caption h3 span {
    font-size: 1.4em;
	color: #086496; /* 0A79B6; FFB826; */
	text-shadow: 6px -4px 6px #ddd;
}

.carousel-caption p {
    font-size: 1.4em;
	color: #8BD6FF;
	margin-bottom: 3%;
}

.btn-idx {
	padding: 0.4em 1.2em;
	width: 50%;
	position: absolute;
	left: 25%;
	bottom: 20%;
}

.btn-font1 {
	font-weight: bold;
    font-size: 1.3em;
	color: #333;
	background-color: #E7B54E;
	text-align: center;
	border-radius: 15%;
}

.btn-idx:hover {
	text-decoration: none;
	background-color: transparent;
	border-color: #81CB6A;
	border-width: 1px;
	color: #fff;
}

.btn-idx:focus {
	text-decoration: none;
	color: #000;
}

/*
--------------------------------------------------------------------
---- HOME CAROUSEL CONTROL
--------------------------------------------------------------------
*/

.carousel-control {
	color: #fff;
    font-size: 2em;
    width: 25%;
    z-index: 30;
}

.carousel-control.right {
	right: 0%;
    background-image: none;
}

.carousel-control.left {
	left: 0%;
    background-image: none;
}

.carousel-control:hover /*,
.carousel-control:focus */ {
    text-shadow: 6px 0px 2px #FF0, -6px 0px 2px #FFFF33;
	color: #fff;
 	text-decoration: none;
 	opacity: .9;
 }
 
.carousel-control .icon-next, .carousel-control .glyphicon-chevron-right, .carousel-control .glyphicon-hand-right  {
	position: absolute;
    top: 40%;
    right: 20%;
}
.carousel-control .icon-prev, .carousel-control .glyphicon-chevron-left, .carousel-control .glyphicon-hand-left  {
	position: absolute;
    top: 40%;
    left: 30%;
}

/*
--------------------------------------------------------------------
---- HOME CAROUSEL INDICATORS
--------------------------------------------------------------------
*/

.carousel-indicators li {
	background-color: rgba(0, 0, 0, 0);
	border: 2px solid #bbb;
	border-radius: 80% 25%;
	width: 20px;
}
.carousel-indicators .active {
	background-color: #bbb;
	width: 20px;
}

.carousel-indicators {
	bottom: 5%;
}

/*
--------------------------------------------------------------------
---- VENTAS CAROUSEL
--------------------------------------------------------------------
*/

.carousel-ppal2 {
	position: absolute;
	margin: 0px;
	overflow: hidden;
	left: 15%;
	right: 15%;
	border-radius: 20% 0%;
}

/*
--------------------------------------------------------------------
---- VENTAS CAROUSEL IMAGENES
--------------------------------------------------------------------
