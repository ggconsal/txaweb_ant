/*
--------------------------------------------------------------------
---- MEDIA QUERIES 
----
----    >>> PORTRAIT GENERAL <<<
----
--------------------------------------------------------------------
*/

@media (orientation:portrait) {
	.img-ppal {
		height: 50%;
	}

	.img-ppal2 {
		visibility: visible;
		height: 50%;
		opacity: .89;
		width: 100%;
	    -ms-transform: rotate(180deg); /* IE 9 */
	    -webkit-transform: rotate(180deg); /* Chrome, Safari, Opera */
	    transform: rotate(180deg);		
	}

	.navbar {
	    font-size: 0.7em;
	}

	.redes-soc {
		top: 10%;
	}

	.carousel-ppal2 {
		left: 2%;
		right: 2%;
	}

	.carousel-caption2 {
		bottom: 1%;
	}

	.carousel-caption2 h3 {
	    font-size: 2.6em;
	}

	.carousel-caption2 p {
	    font-size: 1.4em;
	}

	.carousel-caption p {
		margin-top: 5%;
	}

	.btn-idx {
		margin-top: 5%;
	}

	.btn-idx2 {
		width: 70%;
		left: 15%;
	}

	.carousel-indicators2 {
		left: 50%;
	}

	.img_vta1, .img_vta2, .img_vta3, .img_vta4, .img_vta5, .img_vta6 {
		margin: 0px auto;
		margin-top: 16%;
		width: 100%;
	}

	.carousel-indicators {
		bottom: 5%;
	}

}

/*
--------------------------------------------------------------------
---- MEDIA QUERIES
----
----    >>> LANDSCAPE GENERAL <<<
----
--------------------------------------------------------------------
*/

@media (min-width: 5px) and (orientation:landscape) {
	.img-ppal {
		height: 100%;
	}

	.img-ppal2 {
		visibility: hidden;
	}

	.redes-soc {
		top: 6%;
	}

	.carousel-ppal2 {
		left: 15%;
		right: 15%;
	}

	.carousel-caption2 {
		bottom: -7%;
	}

	.carousel-caption2 h3 {
	    font-size: 3em;
	}

	.carousel-caption2 p {
	    font-size: 1.6em;
	}

	.btn-idx2 {
		width: 50%;
		right: 2%;
		bottom: 7%;
	}

	.carousel-indicators2 {
		left: 30%;
	}

	.img_vta1, .img_vta2, .img_vta3, .img_vta4, .img_vta5, .img_vta6 {
		margin: 0px auto;
		margin-top: 2%;
	}

	.img_vta1, .img_vta5 {
		width: 95%;
	}

	.img_vta2 {
		width: 90%;
	}

	.img_vta3, .img_vta4, .img_vta6 {
		width: 99%;
	}

}

