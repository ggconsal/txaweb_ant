/*
--------------------------------------------------------------------
---- VENTAS CAROUSEL CAPTION
--------------------------------------------------------------------
*/

.carousel-caption2 {
	position: absolute;
	background-color: #ddd;
	right: 0;
	left: 0;
	bottom: 0%;
	opacity: .6;
	height: 48%;
	color: #555;
	margin-top: 0;
	padding: 0;
	text-align: center;
	z-index: 1;
}

.carousel-caption2 h3 {
    font-size: 3em;
    text-shadow: 6px -4px 4px #FFFF33;
    z-index: -1;
    padding-top: 0%;
    padding-left: 5%;
    padding-right: 5%;
	margin-top: 15px;
	color: #333;
}

.carousel-caption2 p {
    font-size: 1.8em;
    padding-left: 1%;
    padding-right: 1%;
}

.btn-idx2 {
	padding: 0.4em 1.2em;
	width: 50%;
	position: absolute;
	left: 25%;
	bottom: 12%;
	z-index: 10;
}

.btn-idx2:hover {
	text-decoration: none;
